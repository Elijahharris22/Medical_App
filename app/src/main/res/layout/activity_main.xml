<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@string/tvTitle"
        android:text="Convert Patient Weight"
        android:textColor="#FF0000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/hint"
        android:ems="10"
        android:hint="@string/hint"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <RadioGroup
        android:id="@+id/rgWeight"
        android:layout_width="256dp"
        android:layout_height="102dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="372dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rbLBToKilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Pounds to Kilograms"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbKiloToLB"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:text="Convert Kilograms to Pounds"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="142dp"
        android:layout_height="66dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="#FF0000"
        android:text="Button"
        android:textColorHighlight="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="224dp"
        android:layout_height="55dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="480dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    />

</androidx.constraintlayout.widget.ConstraintLayout>